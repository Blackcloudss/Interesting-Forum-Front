.container {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 999;
}

.icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease;
}

.icon-container.active {
  transform: rotate(135deg);
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.popup-box {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.popup-box.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.popup-content {
  position: relative;
  background: #fff;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.text {
  font-size: 28rpx;
  color: #333;
}

.triangle {
  position: absolute;
  bottom: -16rpx;
  right: 20rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 16rpx solid #fff;
}