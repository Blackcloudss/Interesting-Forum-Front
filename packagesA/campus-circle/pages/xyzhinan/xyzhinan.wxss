/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
}

/* 每个盒子 */
.box {
  width: 100%;
  max-width: 300px;
  height: 200px;
  margin-bottom: 20px;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* 背景图 */
.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 内容容器 */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #ffffff;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

/* 图标 */
.icon {
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}

/* 标题 */
.title {
  font-size: 16px;
  font-weight: bold;
}