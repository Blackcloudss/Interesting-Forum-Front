/* WXSS */
.container {
  display: flex;
  padding: 0;
  margin:0;
}

.box1 {
  width: 680rpx;
  height: 430rpx;
  margin: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 5rpx 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.23);
  position: relative;
}

.box1-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.box1-image:hover {
  transform: scale(1.02);
}

.custom-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: modalFadeIn 0.3s ease;
  background-color: #f5f5f5;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.link-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
}

.modal-link {
  font-size: 26rpx;
  color: #409eff;
  flex: 1;
  margin-right: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background-color: #409eff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.copy-btn:hover {
  transform: scale(1.02);
}

.copy-icon {
  font-size: 30rpx;
}

.close-btn {
  width: 100%;
  background-color: #e5e5e5;
  color: #333;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 26rpx;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.close-btn:hover {
  background-color: #dcdcdc;
}

/* 教学管理模块 */
.box2 {
  width: 680rpx;
  margin: 40rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 24rpx;
}
.box2-title {
  font-size: 36rpx;
  position: absolute;
  margin-top: -60rpx;
  margin-left: 20rpx;
  font-weight: bold;
  color: rgb(22, 22, 22);
  margin-bottom: 50rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}
.card-group {
  display:flex;
  flex-direction: column;
  margin-top: 20rpx;
  gap: 20rpx;
}
.card {
  padding: 25rpx;
  height: 100rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: transform 0.2s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}
.card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}
.card-icon {
  width: 40rpx;
  height: 40rpx;
}