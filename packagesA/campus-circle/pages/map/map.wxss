.close-modal-btn {
  position: relative;
  background-color: #e5e5e5;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  cursor: pointer;
  margin-top: 20rpx;
}

.link-input {
  flex: 1;
  padding: 10rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  color:#007aff;
  /* background-color: #cbe4f8; */
}
.copy-btn {
  position: relative;
  padding: 10rpx 20rpx;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 10rpx;
  cursor: pointer;
  margin-bottom: 80rpx;
}
.big-image {
  position: absolute;
  margin-top: -470rpx;
  cursor: zoom-in;
}
