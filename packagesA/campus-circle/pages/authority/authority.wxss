/* 官方通道 */
.box1{
  width: 680rpx;
  height: 430rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
  border: 1px solid #c0c0c0;
  border-radius: 40rpx;
  box-shadow: 4rpx 4rpx 10rpx 2rpx rgba(0, 0, 0, 0.23);
  background: linear-gradient(to right, #c9f8b1, #d6f9c4,#f0f9eb);
  display: flex;
  flex-wrap: wrap; /* 使子元素换行 */
}
.grid-item {
  width: 25%; /* 每行四个元素，每个占 25% */
  padding: 15rpx;
  box-sizing: border-box; /* 包含 padding 和 border */
  display: flex;
  flex-direction: column; /* 图标和文字垂直排列 */
  align-items: center; /* 水平居中 */
  margin-bottom: 15rpx; /* 行间距 */
}
.grid-item image {
  width: 60rpx; /* 图标宽度 */
  height: 60rpx; /* 图标高度 */
  margin-bottom: 8rpx; /* 图标与文字间距 */
}
.grid-item text {
  font-size: 24rpx; /* 文字大小 */
  color: #333; /* 文字颜色 */
  white-space: nowrap; /* 防止文字换行 */
}
/* 官方联系方式 */
.box2{
  position: relative;
  border: 1px solid #ffe0ae;
  width: 600rpx;
  height: 390rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
  border-radius: 40rpx;
  box-shadow: 4rpx 4rpx 10rpx 2rpx rgba(0, 0, 0, 0.23);
  padding:20rpx 40rpx;
}


.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 30rpx;
  color: #409eff;
  cursor: pointer;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.text-container {
  flex: 1;
}

.sub-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.contact-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

.copy-btn {
  height: 25px;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #409eff;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  margin-left: 800rpx;
  margin-top: 30rpx;
}



/* 内容区域高度适配 */
.box3 {
  width: 680rpx;
  height: 500rpx;
  margin: 40rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: inset 0 4rpx 10rpx rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
}
.title_{
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
/* 标签栏容器 */
.tabs-container {
  width: 95%;
  height: 80rpx;
  white-space: nowrap; /* 关键：禁止换行 */
  background-color: white;
  box-shadow: 0 0px 10rpx rgba(0, 0, 0, 0);
  margin-top: 60rpx;
  margin-left: 10rpx;
  /* background-color: chartreuse; */
}
.swiper {
  flex: 1; /* 占据剩余空间 */
  min-height: 1000rpx; /* 设置最小高度 */
}
/* 横向排列标签 */
.tabs-scroll {
  display: inline-block; /* 关键：实现横向排列 */
  height: 100%;
}
.content-item {
  box-sizing: border-box;
  /* background-color: chocolate; */
}
.tab-item {
  display: inline-block;
  padding: 0 32rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(24, 24, 24);
  transition: all 0.3s;
  /* background-color: burlywood; */
  /* margin-top: 50rpx; */
}
.tab-item.active {
  color: #409EFF;
  font-weight: bold;
  border-bottom: 4rpx solid #409EFF;
}

/* 卡片样式 */
.card {
  display: flex;
  height: 50rpx;
  width:580rpx;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  margin: 20rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  /* box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1); */
  box-shadow: 4rpx 4rpx 10rpx 2rpx rgba(0, 0, 0, 0.23);
  background-color: #f5f5f5;
}

/* 模态框样式 */
.modal-dialog {
  width: 400rpx;
  padding: 40rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #e7e6e6;
  border-radius: 20rpx;
}
.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx auto;
}
.more-icon{
  width: 100rpx;
  height: 100rpx;
}
.text{
  flex: 1;
  text-align: left;
  margin-left: 20rpx;
}