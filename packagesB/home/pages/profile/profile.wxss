  border-radius: 25px;
}
.tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.tab-button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  text-align: center;
  /* border: 1px solid #ddd; */
  border-radius: 15px ;
  border-bottom: 2px solid #acacac;
}

.tab-button.active {
  background-color:#fff;
  border-right: 2px solid #acacac;
  border-left: 2px solid #acacac;
  border-top: 2px solid #acacac;
  
}
.showPosts-icon{
  width: 20px;
  height: 20px;
}
.showFavorites-icon{
  width: 20px;
  height: 20px;
}
.my-toux{
  border-radius: 50%;
  width: 30px;
  height: 30px;
}
.others-toux{
  border-radius: 50%;
  width: 30px;
  height: 30px;
}
.posts {
  margin-top: 20px;
}

.post {
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.favorites-time,.post-time{
  font-size: 10px;
  color: #acacac;
}

.favorites-content,.post-content{
  
  margin-left: 15px;
}
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  width: 80%;
  /* background-color: red; */
  z-index: 3;
}