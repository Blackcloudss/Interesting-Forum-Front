/* 输入项值区域样式 */
.item-value {
  flex: 1;
  display: flex;
  align-items: center;
  position: absolute;
  width: 550rpx;
  margin-left: 90rpx;
}

/* 头像和背景图片样式 */
image {
  height: 85rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  object-fit: cover;
  margin-left:470rpx;
      /*直接设置文本右对齐 */
      text-align: right; 
      flex: 1; /* 占据剩余空间，确保对齐效果 */
}

/* 输入框样式 */
input {
  flex: 1;
  font-size: 16px;
  color: rgb(139, 139, 139);
  margin-left:300rpx;
    /*直接设置文本右对齐 */
    text-align: right; 
    flex: 1; /* 占据剩余空间，确保对齐效果 */
