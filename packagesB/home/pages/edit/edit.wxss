}



/* 保存按钮样式 */
.save-button {
  border-radius: 10px;
  font-size: 40rpx;
  margin-bottom: 60rpx;
}
.save-button:active {
  background-color: #0056b3;
}
/* 分割线 */
.divider {
  height: 1px;
  margin-left: 20rpx;
  background-color: #cfcfcf;
  width:670rpx;
}

