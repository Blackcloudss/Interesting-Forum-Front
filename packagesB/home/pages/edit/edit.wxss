  padding: 10rpx;
  background-color: rgb(245, 245, 245);
  height:100vh;
}

.section {
  margin-top:-90rpx;
  border-radius: 35rpx;
  padding: 0px;
  background-color: white;
  border:1.5px #f78f91 solid;
}

.section-title {
  font-size: 17px;
  margin-bottom: 108rpx;
  margin-top: 20rpx;
  margin-left:-570rpx;
  /* background-color: aquamarine; */
}

.section-content {
  display: flex;
  flex-direction: column;
  width: 700rpx;
  /* background-color: antiquewhite; */
}

.item {
  display: flex;
  align-items: center;
  height:100rpx;
  /* margin-bottom: 10px; */
