/* 通用样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5; 
  padding-top: 0px;
  padding: 16px;
}

/*第一部分整个搜索栏  */
.search{
  width: 363px;
  height: 230px;
  margin-bottom: 16px; 
  background-color:#fff;
  border-radius: 0px 0px 20px 20px;
  border: 2px solid #d3eac7;
  /* 超出部分隐藏（历史记录条目） */
  overflow: hidden; 
}

/*整个搜索条条*/
.search-bar {
  display: flex;
  align-items: center;
  width: 360px;
  height: 52px;
  margin-top: 10px;
  margin-bottom: 16px;
  border-radius: 15px;
  border: 3px solid #d3eac7;
}
/*搜索输入框*/
.search-bar input {
  padding: 8px;
  width: 215px;
  border-radius: 4px;
}
/*搜索图标*/
.search-icon{
  width: 30px;
  height: 30px;
  margin-left: 13px;
}
/*搜索按钮*/
.search-bar button {
  width: 75px;
  height: 35px;
  margin-left: 8px;
  padding: 6px;
  border-radius: 12px;
  background-color:#b1df9a; 
  /* 文字颜色 */
  font-size:15px ;
  color: white;
  /* 搜索功能 */
  cursor: pointer;
}
/* 历史记录整个框框 */
.history {
  margin-bottom: 16px;
}
/*字体：历史记录+图标*/
.history-1{
  display: flex;
  /*图标与文字对齐*/
  vertical-align:middle;
  color: #acacac;
}
/*历史记录小图标*/
.history-icon{
  width: 30px;
  height: 30px;
}
/*字体：历史记录*/
.lsjl{
  font-style: 15px;
  line-height: 30px;
}
/*历史记录条目*/
.history-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  margin-left:40px ;
  padding: 5px;
  background-color: #fff;
  border-radius: 4px;
  vertical-align:middle;

  line-height: 25px;
  color: #acacac;
}
/*历史记录取消小图标*/
.history-item-icon{
  width: 25px;
  height: 25px;
}
/* 历史记录可以滑动 */
.scroll-history-item{
  /* 设置一个固定的高度，根据实际需求调整 */
  height: 150px; 
  /* 允许垂直方向滚动 */
  overflow-y: auto; 
}

/* 第二部分：今日校园热议+小图标 */
.hot-topics-title{
  display: flex;
  height: 68px;
  margin-top: -10px;
  margin-left:-140px;
  /* 设置一个较高的z-index值，确保在其他组件之上 */
  z-index: 10; 
}
/*hot小图标*/
.hot-icon{
  width: 40px;
  height: 55px;
}
/*文字：今日校园热议 */
.hot-topics-title-text{
  margin-left: 15px;
  font-size: 25px;
  font-weight: 700;
  color: pink;
  line-height: 68px;
}


/* 第三部分：热搜榜内容版面 */
.hot-topics {
  display: flex;
  position: relative;
  width: 100%;
  height: 100%; 
  margin-top: 5px;
  padding: 16px;
  background-color: #fff;
  border-radius: 15px;
}
/* 热搜条目 */
.topic-item {
  padding: 8px;
}
/* 热搜条目前面的数字 */
.topic-number{
  margin-right: 8px; 
  font-size: 16px; 
  color: #000; 
  font-weight: normal;  
}
/* 为前三个数字设置样式 */
.topic-number[data-index="0"],
.topic-number[data-index="1"],
.topic-number[data-index="2"] {
  font-size: 20px; 
  color: #ff0000;
  font-weight: bold; 
}
/* 固定热搜条目滚动区域 */
.scroll-hot-topics{
  margin-top: 0px;/*给固定导航留出空间*/
  height: 100%; /* 确保滚动区域占满高度 */
}

/* 右下角底图小屋 */
.hot-topics-picture{
  position: fixed;
  width: 150px;
  height: 150px;
  margin-left: 211px;
  margin-top: 180px;
}

