.container {
  padding: 0px;
  background-color: #f5f5f5;
  /* background-color: red; */
}

/* .header {
  text-align: center;
  margin-bottom: 20px;
} */
.first-part
{
  width: 360px;
  height: 150px;
  padding-top: 25px;
  background-color: #fff;
  justify-content: space-evenly;
  border: 2px solid #ffd5d6;
  border-radius: 0px 0px 20px 20px;
}

/* 头像那一行 */
.user-info {
  display: flex;
  width: 340px;
  height: 64px;
  margin-left: 16px;
  align-items: center;
  margin-bottom: 20px;
  /* background-color: red; */
}
/* 头像 */
.avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 10px;
  /* background-color: red; */
}

/* 名字+性别图标+学院 */
.info {
  flex: 1;
  margin-top: -10px;
  margin-left: 3px;
  /* background-color: red; */
}
/* 名字 */
.username {
  /* display: block; */
  font-size: 24px;
  font-weight: bold;
  
  /* margin-top: 8px; */
}
.info1{
  display: flex;
  /* vertical-align: ; */
  /* background-color: blue; */
}
/* 性别图标 */
.sex-icon{
  width: 26px;
  height: 26px;
  margin-top: 5px;
  /* background-color: red; */
}
.college {
  display: block;
  font-size: 16px;
  color: #888;
  margin-top: 5px;
  /* background-color: red; */
}
/* 查看个人主页按钮*/
.follow-button{
  display: flex;
  width: 130px !important;
  justify-content:space-evenly;
  height: 20px;
  margin-left: -5px;
  margin-top: -10px;
  padding: 0;
  font-size: 15px;
  font-weight: normal;
  vertical-align: top;
  color: #888;
  background-color: #fff;
}
/* 查看个人主页的眼睛图标 */
.follow-button-icon{
  width: 20px;
  height: 20px;
}
/* 关注和粉丝那一行 */
.stats {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  justify-content: space-evenly;
  margin-bottom: 20px;
  /* background-color: red; */
}
/* 关注和粉丝两块 */
.stats1, .stats2 {
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
  align-items: center; /* 垂直居中对齐 */
}
.stats1-bottom,.stats2-bottom{
  display: flex;
}


/* 关注小图标 */
.stats1-bottom-icon{
  /* margin-top: 5px; */
  width: 20px;
  height: 20px;
}
/* 粉丝小图标 */
.stats2-bottom-icon{
  width: 23px;
  height: 23px;
}
.second{
  position: relative;
  width: 312px;
  height: 426px;
  margin-top: 14px;
  padding: 24px;
  border-radius: 20px;
  border: 2px solid #ffd5d6;
  /* background-color: red; */
  background-color: #fff;
}
/* 四个按钮 */
.menu button {
  display: flex;
  /* vertical-align: middle; */
  width: 320px;
  height: 55px;
  justify-content: space-between;
  /* width: 100%; */
  margin-bottom: 10px;
  padding: 10px;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
  border-radius: 5px;
  text-align: left;
  /* background-color: red; */
}
/* 小图标+文字 */
.menu-left{
  display: flex;
  justify-content: space-evenly;
 width: 120px;
 /* background-color: red; */
}
.second-text{
  /* color: pink; */
  font-weight: 700;
  margin-top: 5px;
}
/* 四个不同的小图标 */
.second-icon{
  width: 30px;
  height: 30px;
}
/* 右小图标 */
.second-icon2{
  width: 16px;
  height: 16px;
  margin-top: 8px;
}
/* 烟花背景 */
.second-background{
  position: absolute;
  width: 200px;
  height: 200px;
  bottom: 0;
  right: 0;
}