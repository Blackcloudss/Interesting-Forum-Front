/* pages/detailed-item/detailed-item.wxss */
/* 全局样式 */
.container {
  position: fixed;
  height: 100vh;
  padding: 10px;
  background-color: #f5f5f5;
}

/* 帖子盒子 */
.post-box {
  background-color: #fff;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  /* background-color: antiquewhite; */
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.user-info {
  margin-left: 10px;
  /* background-color: aqua; */
  margin-left: -230rpx;
  display: flex;
    flex-direction: column; /* 子元素垂直排列，实现换行效果 */
}
.user-nickname {
  font-weight: bold;
}
.user-nickname_ {
  font-weight: bold;
  color: black;
  margin-left: 250rpx;
}

.post-time {
  color: #999;
  font-size: 12px;
}


.post-actions {
  display: flex;
  align-items: center;
  /* background-color: aquamarine; */
}

.report-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.report{
  font-size: 26rpx;
  margin-left: -10rpx;
  margin-right: 20rpx;
}

.follow-button {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
  font-size: 12px;
}

/* 帖子内容 */
.post-content {
  padding: 30rpx;
  margin-top: -20rpx;
}

/* 帖子图片 */
.post-image {
  width: 50%;
  height: 40%;
  margin-left: 30rpx;
  margin-bottom: 10px;
}

/* 帖子标签和操作 */
.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: -60rpx;
}

.category-icon {
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
}

.action-icons {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.action-icons_ {
  display: flex;
  align-items: center;
  margin-left: 480rpx;
}
.like-icon,
.collect-icon {
  width: 20px;
  height: 20px;
  margin-right: 5rpx;
}
.like-icon_,
.collect-icon_ {
  width: 20px;
  height: 20px;
  margin-right: 15rpx;
}

.like-count,
.collect-count {
  margin-right: 5rpx;
}
.like-count_,
.collect-count_ {
  margin-right: 5rpx;
}

/* 评论盒子 */
.comment-box {
  position: absolute;
  background-color: #fff;
  border-radius: 5px;
  margin-top: 645rpx;
  height: 280rpx;
  padding: 10px;
  width: 90%;
}

/* 评论标题 */
.comment-title {
  position: absolute;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 570rpx;
  width: 90%;
  height:60rpx;
}

.comment-item {
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.comment-time {
  color: #999;
  font-size: 12px;
  margin-left: 300rpx;
}
.comment-time_ {
  color: #999;
  font-size: 12px;
  margin-left: 250rpx;
}

.comment-content {
  margin-bottom: 10px;
  padding:20rpx;
  margin-top: -10rpx;
}

.reply-box {
  background-color: #ecebeb;
  border-radius: 5px;
  padding: 10px;
  width: 85%;
  margin-top: -20rpx;
  margin-left: 50rpx;
  margin-bottom: 10px;
}

/* 底部输入框容器 */
.input-container {
  display: flex;
  width: 100%;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #eee;
  padding: 10px;
  margin-top: 350px;
}

/* 输入框图标 */
.input-icon {
  width: 70rpx;
  height: 70rpx;
}

/* 输入框 */
.input-field {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
  border-radius: 5px;
  margin-right: 10px;
}

/* 发送按钮 */
.send-button {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
}
  
  