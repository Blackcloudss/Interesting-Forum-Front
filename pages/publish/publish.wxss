.container {
  padding: 0px;
  background-color: #f5f5f5;
  width: 390px;
  height: 670px;
  /* min-height: 100vh; */
}
/*一. 输入文本框 整块*/
.input-section {
  width: 360px;
  height: 230px;
  background-color: #fff;
  
}
/* 一.1.输入文字的文本框 */
.text-input {
  width: 350px;
  height: 230px;
  padding: 10px;
  font-size: 14px;
}
/*一.2. 统计的字数 */
.word-count {
  color: #666;
  font-size: 12px;
  text-align: right;
}


/*二. 上传图片的一整块 */
.image-upload {
  position: relative;
  display: flex;
  height: 130px; 
  width: 370px;
  background-color: #fff;
 
}
/* 二.1.上传图片按钮 */
.upload-button {
  position: relative;
  padding: 0px;
  left: 0px;
  width: 100px !important;
  height: 100px;
  border: 2px dashed #666;
  border-radius: 20%;
}
/* 二.1.1上传图片按钮"十"字 */
.upload-button-text{
  line-height: 100px;
  color: grey;
  font-size: 50px;
  font-weight:100;
}
/* 二.2.上传的所有图片那整个部分 */
.image-list {
  display: flex;
  flex: 1;
  margin-left: 2px;
  gap: 2px;
  overflow: auto;
}

/* 二.2.1每个图片的盒子 */
.image-item{
  position: relative;
  display: flex;
  position: relative;
  width: 100px;
  height: 100px;
}
/* 二.2.1.1.上传的图片 */
.uploaded-image {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 8px;
}
/* 二.2.2删除按钮 */
.delete-button {
  padding:  0px;
  position: absolute;
  top: 0px;
  right: 0px;
  width: 20px !important;
  height: 20px;
  border-radius: 50%;
  border: none;
  cursor: pointer;
}
/* 二.2.2.1删除按钮的图标 */
.delete-icon{
  width: 18px;
  height: 18px;
}

/* 三.话题选择那行盒子 */
.topic-section {
  display: flex;
  position: relative;
  padding-left:5px ;
  padding-right:30px ;
  justify-content: space-between;
  width: 340px;
  height: 50px;
  /* margin-top: -140px;
  margin-bottom: -190px; */
  background-color: #fff;
  border-top: 3px solid grey;
  line-height: 50px;
}
/* 三.1.话题选择按钮 */
.topic-button {
  color: #007aff;
  font-size: 14px;
  text-align: center;
}
/* 三.1.1.话题选择小箭头 */
.topic-section-icon{
  position:absolute;
  width: 25px;
  height: 25px;
  right: 0px;
  top: 13px;
}

/* 四.观看权限那一行盒子 */
.permission-section {
  display: flex;
  position: relative;
  padding-left:5px ;
  padding-right:30px ;
  justify-content: space-between;
  width: 340px;
  height: 50px;
  background-color: #fff;
  border-top: 3px solid grey;
  line-height: 50px;
  margin-bottom: 20px;
}
/* 四.1."观看权限"文本 */
.permission-text {
  font-size:14px;
  color: #333;
}
/* 四.2.观看权限的选择 */
.permission-current {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #666;
}
/* 四.3.观看权限选择的小箭头 */
.permission-section-icon {
  position:absolute;
  width:25px;
  height:25px;
  right:0px;
  top:13px;
}

/* 四.4.1.弹窗样式 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
/* 四.4.2.弹窗内容 */
.popup-content {
  width: 300px;
  background: white;
  border-radius: 8px;
  padding: 20px;
  position: relative;
}
/* 四.4.3.弹窗选项 */
.option {
  padding: 15px 0;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  font-size: 16px;
}
.option:last-child {
  border-bottom: none;
}
/* 四.4.4.弹窗取消按钮 */
.cancel-button {
  width: 100%;
  margin-top: 20px;
  padding: 12px;
  background: #007aff;
  color: white;
  font-size: 16px;
  border-radius: 8px;
}

/* 五.发布按钮 */
.publish-section {
  text-align: center;
}
.publish-button {
  width: 20px;
  padding: 12px;
  background-color: #007aff;
  color: white;
  font-size: 16px;
  border-radius: 8px;
}

/* 标题输入部分 */
.title-section {
  width: 360px;
  background-color: #fff;
}

.title-input {
  width: 360px;
  height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #eee;
  padding: 5px;
}

.bold-text {
  font-weight: bold;
  font-size: 18px;
}

.title-count {
  text-align: right;
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}

/* 话题弹窗 */
.topic-popup {
  max-height: 70vh;
  overflow-y: auto;
}

.topic-option {
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.topic-option.selected {
  color: #007aff;
  font-weight: bold;
}

/* 新增样式 */
.category-arrow {
  width: 20px;
  height: 20px;
  float: right;
}

.sub-header {
  padding: 15px;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.back-arrow {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.sub-option {
  padding: 15px 30px;
  border-bottom: 1px solid #eee;
}

.selected {
  color: #007aff;
  font-weight: bold;
  background-color: #f0f8ff;
}